<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" 
            action=<% if (editMode) { %> "/admin/edit-product/<%= product._id %>" <% } else { %> "/admin/add-product" <% } %>
            method="POST"
        >
            <div class="form-control">
                <label for="title">Title</label>
                <input type="text" name="title" id="title" 
                    value="<% if (editMode) {%> <%=product.title%> <% } %>"
                >
            </div>
            <div class="form-control">
                <label for="imageUrl">Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl"
                    value="<% if (editMode) {%> <%=product.imageUrl%> <% } %>"
                >                    
            </div>
            <div class="form-control">
                <label for="price">Day Rate</label>
                <input type="number" name="price" id="price" step="0.01" 
                    value=<% if (editMode) {%> <%=product.price%> <% } %>
                >
            </div>
            <div class="form-control">
                <label for="depositRate">Deposit Rate</label>
                <input type="number" name="depositRate" id="depositRate" step="0.01" 
                    value=<% if (editMode) {%> <%= product.depositRate %> <% } %>
                >
            </div>
            <div class="form-control">
                <label for="description">Description</label>
                <textarea name="description" id="description" rows="10">
                    <% if (editMode) {%> <%= product.description%> <% } %>
                </textarea>
            </div>
            <div class="form-control">
                <label for="postalCode">Postal Code</label>
                <input type="text" name="postalCode" id="postalCode" value="<% if (editMode) {%> <%=product.postalCode%> <% } %>">
            </div>

            <% if (editMode) { %>
                <input type="hidden" type="text" name="productId" id="productId" value="<%= product.productId %>">
            <% } %>

            <button class="btn" type="submit">
                <% if (editMode) { %> Update Beacon <% } else { %> Add my beacon! <% } %>
            </button>
        </form>
    </main>
<%- include('../includes/end.ejs') %>"